<div class="container py-5">
  <form action="/records/{{records._id}}?_method=PUT" method="POST">
    <div class="card mx-auto m-5" style="width: 50%;">
      <h3 class="text-center m-4">修改支出</h3>
      <div class="form-group mb-2 mx-4">
        <label for="name">名稱</label>
        <input type="text" class="form-control" name="name" value="{{records.name}}" required>
      </div>
      <div class="form-group row mb-2 mx-4">
        <label for="date">日期</label>
        <input type="date" class="form-control" name="date" value="{{records.date}}" required>
      </div>
      <div class="form-group mb-2 mx-4">
        <label for="category">類別</label>
        <select class="custom-select" name="category" required>
          <option value="{{records.category}}">{{records.category}}</option>
          <option value="家居物業">家居物業</option>
          <option value="交通出行">交通出行</option>
          <option value="休閒娛樂">休閒娛樂</option>
          <option value="餐飲食品">餐飲食品</option>
          <option value="其他">其他</option>
        </select>
      </div>
      <div class="form-group mb-2 mx-4">
        <label for="amount">金額</label>
        <input type="number" class="form-control" name="amount" value="{{records.amount}}" required>
      </div>
      <div class="row justify-content-center">
        <button type="submit" class="btn btn-primary m-4">修改</button>
        <input type="button" onclick="history.back()" class="btn btn-secondary m-4" value="取消">
      </div>
    </div>
  </form>
</div>